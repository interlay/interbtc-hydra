{
    "name": "interbtc-indexer",
    "private": "true",
    "version": "0.10.5",
    "description": "GraphQL server and Substrate indexer for the interBTC parachain",
    "author": "",
    "license": "ISC",
    "scripts": {
        "build": "rm -rf lib && tsc",
        "gen:json": "node indexer/generateTypes.js",
        "gen:explore:kintsugi": "squid-substrate-metadata-explorer --chain wss://api-kusama.interlay.io/parachain --archive https://kintsugi.archive.subsquid.io/graphql --out indexer/kintsugi.chainVersions.jsonl",
        "gen:explore:testnet": "squid-substrate-metadata-explorer --chain wss://api-testnet.interlay.io/parachain --archive https://api-testnet.interlay.io/gateway-graphql/graphql  --out indexer/testnet.chainVersions.jsonl",
        "gen:types:kintsugi": "squid-substrate-typegen kintsugi.typegen.json",
        "gen:types:testnet": "squid-substrate-typegen testnet.typegen.json",
        "gen:code": "squid-typeorm-codegen",
        "gen:distributables": "cp indexer/types.json distributable/ && cp schema.graphql distributable/",
        "db:create-migration": "squid-typeorm-migration generate",
        "db:migrate": "squid-typeorm-migration apply",
        "processor:start": "node -r dotenv/config lib/processor.js",
        "query-node:start": "squid-graphql-server"
    },
    "dependencies": {
        "@interlay/interbtc-api": "1.5.20",
        "@interlay/interbtc-types": "1.1.1",
        "@polkadot/util-crypto": "^10.1.7",
        "@subsquid/archive-registry": "^1.0.12",
        "@subsquid/graphql-server": "^2.1.0",
        "@subsquid/ss58": "^0.1.0",
        "@subsquid/substrate-processor": "^1.7.0",
        "@subsquid/typeorm-codegen": "^0.1.1",
        "@subsquid/typeorm-migration": "^0.1.2",
        "@subsquid/typeorm-store": "^0.1.2",
        "bitcoinjs-lib": "^5.2.0",
        "dotenv": "^10.0.0",
        "pg": "^8.8.0",
        "typeorm": "^0.3.9"
    },
    "devDependencies": {
        "@subsquid/cli": "^0.6.0",
        "@subsquid/substrate-metadata-explorer": "^1.0.6",
        "@subsquid/substrate-typegen": "^1.2.2",
        "@types/debug": "^4.1.7",
        "@types/node": "^16.11.2",
        "prettier": "^2.0.5",
        "typescript": "~4.4.4"
    },
    "prettier": {
        "singleQuote": false,
        "tabWidth": 4
    }
}
